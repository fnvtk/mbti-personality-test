/* pages/ai-test/camera.wxss */
.container {
  min-height: 100vh;
  background: #000000;
  display: flex;
  flex-direction: column;
}

.camera-section {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera {
  width: 100%;
  height: 100%;
}

.guide-overlay {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.guide-circle {
  width: 500rpx;
  height: 500rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  box-shadow: 0 0 0 2000rpx rgba(0, 0, 0, 0.5);
}

.guide-text {
  position: absolute;
  bottom: 200rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

.progress-section {
  padding: 32rpx 48rpx;
  background: rgba(0, 0, 0, 0.8);
}

.progress-dots {
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-dot {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-dot::before {
  content: '';
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #4B5563;
  margin-bottom: 8rpx;
}

.progress-dot.active::before {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
}

.dot-label {
  font-size: 22rpx;
  color: #9CA3AF;
}

.progress-dot.active .dot-label {
  color: #FFFFFF;
}

.progress-line {
  width: 80rpx;
  height: 4rpx;
  background: #4B5563;
  margin: 0 16rpx;
  margin-bottom: 30rpx;
}

.progress-line.active {
  background: linear-gradient(90deg, #8B5CF6, #EC4899);
}

.preview-section {
  padding: 16rpx 24rpx;
  background: rgba(0, 0, 0, 0.8);
}

.preview-list {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.preview-item {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-delete {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(239, 68, 68, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #FFFFFF;
}

.action-section {
  padding: 32rpx;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.btn-capture {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.btn-capture:active {
  transform: scale(0.95);
}

.btn-capture-inner {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #FFFFFF;
}

.capture-tip {
  font-size: 26rpx;
  color: #9CA3AF;
}

.complete-section {
  padding: 0 24rpx 32rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: rgba(0, 0, 0, 0.8);
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 112rpx;
  border-radius: 32rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
}

.btn-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
}
