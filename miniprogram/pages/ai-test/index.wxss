/* pages/ai-test/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F3E8FF 0%, #FCE7F3 50%, #FFF5F7 100%);
  padding-bottom: 60rpx;
}

.header-section {
  position: relative;
  padding: 80rpx 40rpx 60rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(139, 92, 246, 0.15);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 2;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #7C3AED;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
}

.intro-card {
  margin: 0 24rpx 32rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  text-align: center;
}

.intro-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.intro-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.intro-desc {
  display: block;
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.dimensions-section {
  padding: 0 24rpx 32rpx;
}

.dimensions {
  display: flex;
  gap: 16rpx;
}

.dimension-item {
  flex: 1;
  padding: 24rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.dimension-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.dimension-icon.mbti {
  background: linear-gradient(135deg, #F43F5E 0%, #FB923C 100%);
}

.dimension-icon.disc {
  background: linear-gradient(135deg, #3B82F6 0%, #06B6D4 100%);
}

.dimension-icon.pdp {
  background: linear-gradient(135deg, #F59E0B 0%, #EF4444 100%);
}

.dimension-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 4rpx;
}

.dimension-desc {
  display: block;
  font-size: 22rpx;
  color: #9CA3AF;
}

.guide-section {
  padding: 0 24rpx 32rpx;
}

.guide-list {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 24rpx;
}

.guide-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.guide-item:last-child {
  border-bottom: none;
}

.guide-num {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.guide-text {
  font-size: 26rpx;
  color: #4B5563;
}

.action-section {
  padding: 0 24rpx 32rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 112rpx;
  border-radius: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.btn:active {
  transform: scale(0.98);
}

.btn-primary {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
}

.btn-outline {
  background: rgba(255, 255, 255, 0.8);
  border: 3rpx solid #DDD6FE;
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 34rpx;
  color: #FFFFFF;
}

.btn-text-outline {
  font-size: 30rpx;
  color: #7C3AED;
  font-weight: 600;
}

.privacy-tip {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  margin: 0 24rpx;
  background: rgba(139, 92, 246, 0.08);
  border-radius: 16rpx;
}

.privacy-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.privacy-text {
  font-size: 22rpx;
  color: #6B7280;
  line-height: 1.5;
}
