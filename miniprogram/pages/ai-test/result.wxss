/* pages/ai-test/result.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F3E8FF 0%, #FCE7F3 50%, #FFF5F7 100%);
  padding: 24rpx;
  padding-bottom: 60rpx;
}

/* 分析中状态 */
.analyzing {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  text-align: center;
}

.analyzing-animation {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.analyzing-circle {
  position: absolute;
  inset: 0;
  border: 6rpx solid transparent;
  border-top-color: #8B5CF6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.analyzing-circle.delay-1 {
  inset: 20rpx;
  border-top-color: #EC4899;
  animation-delay: 0.2s;
}

.analyzing-circle.delay-2 {
  inset: 40rpx;
  border-top-color: #F43F5E;
  animation-delay: 0.4s;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.analyzing-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 24rpx;
}

.analyzing-progress {
  font-size: 48rpx;
  font-weight: 700;
  color: #8B5CF6;
  margin-bottom: 16rpx;
}

.analyzing-bar {
  width: 400rpx;
  height: 12rpx;
  background: #E5E7EB;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.analyzing-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #8B5CF6, #EC4899);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.analyzing-tip {
  font-size: 26rpx;
  color: #6B7280;
}

/* 结果展示 */
.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.main-card {
  text-align: center;
  padding: 48rpx 32rpx;
}

.main-types {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.type-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 32rpx;
  border-radius: 24rpx;
}

.type-badge.mbti {
  background: linear-gradient(135deg, #FEE2E2 0%, #FECDD3 100%);
}

.type-badge.disc {
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
}

.type-badge.pdp {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
}

.type-label {
  font-size: 20rpx;
  color: #6B7280;
  margin-bottom: 4rpx;
}

.type-emoji {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.type-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.result-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.result-summary {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 20rpx;
}

.card-content {
  display: block;
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.7;
}

.traits-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.trait-item {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #F3E8FF 0%, #FCE7F3 100%);
  border-radius: 24rpx;
}

.trait-text {
  font-size: 26rpx;
  color: #7C3AED;
  font-weight: 500;
}

.career-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.career-tag {
  padding: 12rpx 24rpx;
  background: #F3F4F6;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #374151;
}

.action-section {
  margin-top: 16rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-radius: 28rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
}

.btn-outline {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #DDD6FE;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.btn-text-outline {
  font-size: 30rpx;
  color: #7C3AED;
  font-weight: 500;
}
