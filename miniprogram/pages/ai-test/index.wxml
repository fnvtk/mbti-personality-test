<!--pages/ai-test/index.wxml - AI测试首页-->
<view class="container">
  <!-- 顶部区域 -->
  <view class="header-section">
    <view class="header-bg"></view>
    <view class="header-content">
      <text class="header-title">AI人脸性格分析</text>
      <text class="header-subtitle">通过面部特征智能分析你的性格密码</text>
    </view>
  </view>

  <!-- 功能说明 -->
  <view class="intro-card">
    <view class="intro-icon">🤖</view>
    <text class="intro-title">AI智能分析</text>
    <text class="intro-desc">基于深度学习技术，通过面部特征分析您的MBTI人格类型、DISC行为风格和PDP性格特征</text>
  </view>

  <!-- 分析维度 -->
  <view class="dimensions-section">
    <text class="section-title">分析维度</text>
    <view class="dimensions">
      <view class="dimension-item">
        <view class="dimension-icon mbti">MBTI</view>
        <text class="dimension-name">人格类型</text>
        <text class="dimension-desc">16种性格</text>
      </view>
      <view class="dimension-item">
        <view class="dimension-icon disc">DISC</view>
        <text class="dimension-name">行为风格</text>
        <text class="dimension-desc">4种类型</text>
      </view>
      <view class="dimension-item">
        <view class="dimension-icon pdp">PDP</view>
        <text class="dimension-name">动物性格</text>
        <text class="dimension-desc">5种动物</text>
      </view>
    </view>
  </view>

  <!-- 拍照说明 -->
  <view class="guide-section">
    <text class="section-title">拍摄指南</text>
    <view class="guide-list">
      <view class="guide-item">
        <text class="guide-num">1</text>
        <text class="guide-text">确保光线充足，正对镜头</text>
      </view>
      <view class="guide-item">
        <text class="guide-num">2</text>
        <text class="guide-text">保持自然表情，不要遮挡面部</text>
      </view>
      <view class="guide-item">
        <text class="guide-num">3</text>
        <text class="guide-text">拍摄3张照片：正面、左侧45°、右侧45°</text>
      </view>
    </view>
  </view>

  <!-- 开始按钮 -->
  <view class="action-section">
    <view class="btn btn-primary" bindtap="startCamera">
      <text class="btn-icon">📷</text>
      <text class="btn-text">开始拍照分析</text>
    </view>
    <view class="btn btn-outline" bindtap="uploadPhoto">
      <text class="btn-text-outline">上传照片</text>
    </view>
  </view>

  <!-- 隐私提示 -->
  <view class="privacy-tip">
    <text class="privacy-icon">🔒</text>
    <text class="privacy-text">您的照片仅用于本次分析，分析后立即删除，不会保存或用于其他用途</text>
  </view>
</view>
