/* pages/profile/index.wxss - 我的页面样式（匹配5-19-ai） */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 0 0 160rpx;
}

.header {
  background: #fff;
  padding: 48rpx 32rpx 24rpx;
  text-align: center;
}
.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

/* 用户卡片 */
.user-card {
  background: #fff;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #E5E7EB;
  margin-right: 24rpx;
}
.login-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
}
.user-info {
  flex: 1;
}
.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}
.login-tip {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 4rpx;
}
.balance-tag {
  display: inline-block;
  background: #F3E8FF;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  margin-top: 8rpx;
}
.balance-text {
  font-size: 24rpx;
  color: #7C3AED;
  font-weight: bold;
}
.user-actions {
  display: flex;
  gap: 12rpx;
}
.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  background: #F3F4F6;
  font-size: 24rpx;
  color: #666;
}
.login-btn {
  padding: 12rpx 32rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #7C3AED 0%, #EC4899 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 功能菜单 */
.menu-section {
  background: #fff;
  margin: 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}
.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #F3F4F6;
}
.menu-item:last-child {
  border-bottom: none;
}
.menu-icon {
  font-size: 36rpx;
  width: 48rpx;
  text-align: center;
  margin-right: 20rpx;
}
.menu-content {
  flex: 1;
}
.menu-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
}
.menu-desc {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 2rpx;
}
.menu-arrow {
  font-size: 32rpx;
  color: #CCC;
}

/* 测试结果 */
.results-section {
  margin: 24rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}
.result-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
.result-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}
.result-info {
  flex: 1;
}
.result-label {
  font-size: 24rpx;
  color: #999;
  display: block;
}
.result-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #7C3AED;
  display: block;
}
.result-arrow {
  font-size: 32rpx;
  color: #CCC;
}

/* 退出登录 */
.logout-btn {
  margin: 32rpx 24rpx;
  text-align: center;
}
.logout-text {
  font-size: 28rpx;
  color: #EF4444;
}

.footer {
  text-align: center;
  padding: 24rpx;
}
.footer-text {
  font-size: 22rpx;
  color: #CCC;
}

/* 底部导航 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.06);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}
.tab-item {
  text-align: center;
  flex: 1;
}
.tab-icon {
  display: block;
  font-size: 40rpx;
}
.tab-text {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}
.tab-text.active-text {
  color: #7C3AED;
}
.tab-center {
  position: relative;
  top: -20rpx;
}
.tab-center-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #7C3AED 0%, #EC4899 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(124, 58, 237, 0.3);
}
.tab-center-icon {
  font-size: 44rpx;
}
