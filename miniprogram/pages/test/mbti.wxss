/* pages/test/mbti.wxss */
.container {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 200rpx;
  background: linear-gradient(180deg, #FFF5F7 0%, #FFFFFF 100%);
}

.progress-header {
  margin-bottom: 32rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.time-text {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.question-card {
  padding: 40rpx 32rpx;
}

.question-text {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background: #FFFFFF;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.option-item.selected {
  border-color: var(--primary-color);
  background: var(--primary-light);
}

.option-indicator {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #FFFFFF;
}

.option-indicator.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
}

.option-text {
  font-size: 30rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

.nav-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.nav-buttons .btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.submit-btn {
  position: fixed;
  bottom: 60rpx;
  left: 24rpx;
  right: 24rpx;
  height: 96rpx;
  font-size: 32rpx;
}
