/* pages/result/disc.wxss */
.container { min-height: 100vh; padding: 24rpx; padding-bottom: 200rpx; background: linear-gradient(180deg, #EBF5FF 0%, #FFFFFF 100%); }
.gradient-disc { background: linear-gradient(135deg, #3B82F6 0%, #06B6D4 100%); }

.type-card { padding: 60rpx 40rpx; border-radius: 24rpx; text-align: center; color: #FFFFFF; margin-bottom: 24rpx; }
.type-label { display: block; font-size: 26rpx; opacity: 0.9; margin-bottom: 16rpx; }
.type-value { display: block; font-size: 72rpx; font-weight: 700; margin-bottom: 8rpx; }
.type-name { display: block; font-size: 32rpx; font-weight: 600; }

.card-title { display: block; font-size: 32rpx; font-weight: 600; color: var(--text-primary); margin-bottom: 24rpx; }
.dimension-item { margin-bottom: 20rpx; }
.dimension-labels { display: flex; justify-content: space-between; font-size: 26rpx; color: var(--text-secondary); margin-bottom: 8rpx; }
.dimension-bar { width: 100%; height: 12rpx; background: #E5E7EB; border-radius: 6rpx; overflow: hidden; }
.dimension-fill { height: 100%; border-radius: 6rpx; }
.fill-d { background: #EF4444; }
.fill-i { background: #F59E0B; }
.fill-s { background: #10B981; }
.fill-c { background: #3B82F6; }

.description-text { font-size: 28rpx; color: var(--text-secondary); line-height: 1.6; margin-bottom: 24rpx; }
.traits-section { margin-bottom: 20rpx; }
.traits-title { display: block; font-size: 28rpx; font-weight: 600; margin-bottom: 12rpx; color: var(--text-primary); }
.traits-list { display: flex; flex-wrap: wrap; gap: 12rpx; }
.trait-item { padding: 8rpx 20rpx; background: #DBEAFE; color: #3B82F6; border-radius: 20rpx; font-size: 24rpx; }
.trait-item.warning { background: #FEF3C7; color: #D97706; }

.careers-list { display: flex; flex-wrap: wrap; gap: 12rpx; }
.career-tag { padding: 12rpx 24rpx; background: var(--bg-secondary); color: var(--text-primary); border-radius: 24rpx; font-size: 26rpx; }

.action-buttons { display: flex; gap: 24rpx; margin-top: 40rpx; }
.action-buttons .btn { flex: 1; height: 88rpx; font-size: 30rpx; }
.btn-primary { background: linear-gradient(135deg, #3B82F6 0%, #06B6D4 100%); }
