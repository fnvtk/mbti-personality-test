/* pages/index/index.wxss - 首页样式（完全匹配Web端设计）*/

/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F7 0%, #FFE4E9 50%, #FFF0F3 100%);
  padding-bottom: 180rpx;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + constant(safe-area-inset-top));
  padding-top: calc(24rpx + env(safe-area-inset-top));
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.header-icon {
  font-size: 36rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1F2937;
}

.header-right {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.enterprise-icon {
  font-size: 32rpx;
}

/* 主图区域 */
.hero-section {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 48rpx 60rpx;
  min-height: 500rpx;
}

/* 背景装饰圆 */
.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.2;
}

.bg-circle-1 {
  width: 200rpx;
  height: 200rpx;
  background: #FDA4AF;
  top: 60rpx;
  right: 60rpx;
  animation: bounce 3s ease-in-out infinite;
}

.bg-circle-2 {
  width: 140rpx;
  height: 140rpx;
  background: #FBCFE8;
  bottom: 80rpx;
  left: 48rpx;
  animation: bounce 3s ease-in-out infinite 0.5s;
}

.bg-circle-3 {
  width: 100rpx;
  height: 100rpx;
  background: #FDBA74;
  top: 50%;
  left: 32rpx;
  opacity: 0.15;
  animation: float 4s ease-in-out infinite 1s;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

@keyframes float {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-30rpx) scale(1.1); }
}

/* 圆形主图 */
.hero-circle {
  position: relative;
  width: 85%;
  max-width: 480rpx;
  aspect-ratio: 1;
}

.hero-circle-bg {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.hero-image {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 48rpx;
  box-sizing: border-box;
}

/* 浮动标签 */
.float-tag {
  position: absolute;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  animation: fadeIn 0.6s ease-out;
}

.float-tag-1 {
  bottom: 22%;
  left: -10%;
  animation-delay: 0.4s;
}

.float-tag-2 {
  bottom: 8%;
  right: 8%;
  animation-delay: 0.6s;
}

.float-tag-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #F43F5E;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 测试流程卡片 */
.flow-card {
  margin: 0 24rpx 32rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
}

.flow-title {
  display: block;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #F43F5E;
  margin-bottom: 40rpx;
}

.flow-steps {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 0 16rpx;
}

.flow-line {
  position: absolute;
  left: 80rpx;
  right: 80rpx;
  top: 44rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #FECDD3 0%, #FDA4AF 50%, #FECDD3 100%);
}

.flow-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

.step-circle {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #D1D5DB;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.step-circle.active {
  background: linear-gradient(135deg, #F43F5E 0%, #FB923C 100%);
  transform: scale(1.1);
}

.step-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.step-label {
  font-size: 20rpx;
  color: #9CA3AF;
  margin-bottom: 4rpx;
}

.step-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 4rpx;
}

.step-desc {
  font-size: 20rpx;
  color: #9CA3AF;
}

/* 功能按钮区 */
.action-section {
  padding: 0 24rpx 32rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 112rpx;
  border-radius: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transition: all 0.2s ease;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-ai {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
}

.btn-primary {
  background: linear-gradient(135deg, #F43F5E 0%, #FB923C 100%);
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 34rpx;
  color: #FFFFFF;
}

.btn-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.btn-outline {
  flex: 1;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 3rpx solid #FECDD3;
  box-shadow: none;
}

.btn-text-sm {
  font-size: 30rpx;
  color: #F43F5E;
  font-weight: 600;
}

/* 信任背书 */
.trust-text {
  text-align: center;
  font-size: 24rpx;
  color: #9CA3AF;
  padding-top: 16rpx;
}

.trust-num {
  color: #F43F5E;
  font-weight: 700;
}

/* 历史结果 */
.history-section {
  padding: 32rpx 24rpx;
}

.history-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #6B7280;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.history-cards {
  display: flex;
  gap: 16rpx;
}

.history-card {
  flex: 1;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-type {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #F43F5E;
  margin-bottom: 8rpx;
}

.history-label {
  font-size: 22rpx;
  color: #9CA3AF;
}

/* 底部导航 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  z-index: 999;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.tab-icon {
  font-size: 44rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 22rpx;
  color: #9CA3AF;
}

.tab-item.active .tab-text {
  color: #F43F5E;
}

.tab-center {
  position: relative;
}

.tab-center-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F43F5E 0%, #FB923C 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -40rpx;
  box-shadow: 0 8rpx 24rpx rgba(244, 63, 94, 0.4);
}

.tab-center-btn.ai {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.4);
}

.tab-center-icon {
  font-size: 48rpx;
}
