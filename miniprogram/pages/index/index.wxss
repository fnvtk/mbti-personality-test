/* pages/index/index.wxss - 首页样式（匹配截图设计）*/
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F7 0%, #FFFFFF 30%, #FFF5F7 100%);
  padding: 0 24rpx 160rpx;
}

/* 顶部 */
.header {
  text-align: center;
  padding: 24rpx 0 16rpx;
}
.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

/* 团队卡片 */
.team-card {
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  overflow: hidden;
  margin-bottom: 32rpx;
}

.team-section.boss {
  background: linear-gradient(135deg, #FFF5F7 0%, #FFE8EE 100%);
  padding: 32rpx 24rpx 20rpx;
}
.team-section.real {
  padding: 32rpx 24rpx 20rpx;
}

.team-title {
  display: block;
  text-align: center;
  font-size: 34rpx;
  font-weight: 900;
  margin-bottom: 24rpx;
}
.team-title.red {
  color: #E53E3E;
}

.team-row {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.team-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.member {
  text-align: center;
}
.member-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin: 0 auto 8rpx;
  border: 3rpx solid #FFD6DD;
}
.member-avatar.small {
  width: 72rpx;
  height: 72rpx;
  font-size: 32rpx;
  border-color: #E5E7EB;
}
.member-type {
  display: block;
  font-size: 18rpx;
  font-weight: bold;
  color: #E53E3E;
}
.member-type.small {
  font-size: 16rpx;
  color: #666;
}
.member-name {
  display: block;
  font-size: 16rpx;
  color: #999;
  line-height: 1.2;
}
.member-name.small {
  font-size: 14rpx;
}

.tag-row {
  display: flex;
  margin-top: 16rpx;
}
.tag-row.right { justify-content: flex-end; }
.tag-row.between { justify-content: space-between; }

.tag {
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}
.tag.pink { background: #E53E3E; color: #fff; }
.tag.yellow { background: #FEF3C7; color: #B45309; }
.tag.purple { background: #EDE9FE; color: #7C3AED; }

/* 测试流程 */
.flow-section {
  margin-bottom: 32rpx;
}
.flow-title {
  display: block;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #E53E3E;
  margin-bottom: 24rpx;
}
.flow-steps {
  display: flex;
  align-items: flex-start;
  justify-content: center;
}
.step {
  text-align: center;
}
.step-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #D1D5DB;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 8rpx;
}
.step-circle.active {
  background: #EF4444;
}
.step-label {
  display: block;
  font-size: 18rpx;
  color: #999;
}
.step-desc {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}
.step-line {
  width: 60rpx;
  height: 4rpx;
  background: #FFD6DD;
  margin: 40rpx 12rpx 0;
}

/* AI面部测试按钮 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
}
.btn-primary {
  background: linear-gradient(135deg, #F43F5E 0%, #EF4444 100%);
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.3);
}
.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}
.btn-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 测试入口网格 */
.test-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.test-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 0;
  text-align: center;
  border: 2rpx solid #F3F4F6;
}
.test-emoji {
  display: block;
  font-size: 40rpx;
  margin-bottom: 8rpx;
}
.test-name {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}
.test-count {
  display: block;
  font-size: 20rpx;
  color: #999;
}

/* 定价入口 */
.pricing-card {
  background: linear-gradient(135deg, #FAF5FF 0%, #FFF1F2 100%);
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pricing-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.pricing-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}
.pricing-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.pricing-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #E53E3E;
}
.pricing-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 底部导航 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}
.tab-item {
  text-align: center;
  flex: 1;
}
.tab-icon {
  display: block;
  font-size: 40rpx;
}
.tab-text {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}
.tab-item.active .tab-text {
  color: #E53E3E;
}
.tab-center {
  position: relative;
  top: -20rpx;
}
.tab-center-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F43F5E 0%, #EF4444 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.3);
}
.tab-center-icon {
  font-size: 44rpx;
}
