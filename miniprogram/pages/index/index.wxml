<!--pages/index/index.wxml - 首页（匹配截图设计）-->
<view class="container">
  <!-- 顶部标题 -->
  <view class="header">
    <text class="header-title">✨ 神仙团队AI性格测试</text>
  </view>

  <!-- MBTI团队角色卡片 -->
  <view class="team-card">
    <!-- 老板想要的团队 -->
    <view class="team-section boss">
      <text class="team-title red">老板想要的团队</text>
      <view class="team-row">
        <view class="member" wx:for="{{bossTeam}}" wx:key="type">
          <view class="member-avatar">{{item.emoji}}</view>
          <text class="member-type">{{item.type}}</text>
          <text class="member-name">{{item.name}}</text>
        </view>
      </view>
      <view class="tag-row right">
        <text class="tag pink">MBTI性格分析</text>
      </view>
    </view>

    <!-- 现实中的团队 -->
    <view class="team-section real">
      <text class="team-title red">现实中的团队</text>
      <view class="team-grid">
        <view class="member small" wx:for="{{realTeam}}" wx:key="type">
          <view class="member-avatar small">{{item.emoji}}</view>
          <text class="member-type small">{{item.type}}</text>
          <text class="member-name small">{{item.name}}</text>
        </view>
      </view>
      <view class="tag-row between">
        <text class="tag yellow">性格匹配</text>
        <text class="tag purple">特质评估</text>
      </view>
    </view>
  </view>

  <!-- 测试流程 -->
  <view class="flow-section">
    <text class="flow-title">测试流程</text>
    <view class="flow-steps">
      <view class="step">
        <view class="step-circle active">1</view>
        <text class="step-label">STEP1</text>
        <text class="step-desc">拍摄照片</text>
      </view>
      <view class="step-line"></view>
      <view class="step">
        <view class="step-circle">2</view>
        <text class="step-label">STEP2</text>
        <text class="step-desc">AI分析</text>
      </view>
      <view class="step-line"></view>
      <view class="step">
        <view class="step-circle">3</view>
        <text class="step-label">STEP3</text>
        <text class="step-desc">性格测试</text>
      </view>
    </view>
  </view>

  <!-- AI面部测试按钮 -->
  <view class="btn btn-primary" bindtap="goToAITest">
    <text class="btn-icon">📸</text>
    <text class="btn-text">开始AI面部测试</text>
  </view>

  <!-- 其他测试入口 -->
  <view class="test-grid">
    <view class="test-item" bindtap="goToMBTI">
      <text class="test-emoji">🧠</text>
      <text class="test-name">MBTI测试</text>
      <text class="test-count">90题</text>
    </view>
    <view class="test-item" bindtap="goToDISC">
      <text class="test-emoji">💬</text>
      <text class="test-name">DISC测试</text>
      <text class="test-count">20题</text>
    </view>
    <view class="test-item" bindtap="goToPDP">
      <text class="test-emoji">🐯</text>
      <text class="test-name">PDP测试</text>
      <text class="test-count">20题</text>
    </view>
  </view>

  <!-- 定价入口 -->
  <view class="pricing-card" bindtap="goToPricing">
    <view class="pricing-left">
      <text class="pricing-title">个人深度洞察版</text>
      <text class="pricing-desc">AI面相+MBTI+PDP+DISC+盖洛普</text>
    </view>
    <view class="pricing-right">
      <text class="pricing-price">¥198</text>
      <text class="pricing-arrow">›</text>
    </view>
  </view>
</view>

<!-- 底部导航 -->
<view class="tab-bar">
  <view class="tab-item active">
    <text class="tab-icon">🏠</text>
    <text class="tab-text">首页</text>
  </view>
  <view class="tab-item tab-center" bindtap="goToAITest">
    <view class="tab-center-btn">
      <text class="tab-center-icon">📸</text>
    </view>
    <text class="tab-text">AI测试</text>
  </view>
  <view class="tab-item" bindtap="goToProfile">
    <text class="tab-icon">👤</text>
    <text class="tab-text">我的</text>
  </view>
</view>
